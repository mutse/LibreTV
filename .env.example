# 服务器配置
PORT=8080
PASSWORD=
ADMINPASSWORD=admin123
CORS_ORIGIN=*
REQUEST_TIMEOUT=5000
MAX_RETRIES=2
CACHE_MAX_AGE=1d
DEBUG=false

# JWT配置
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# 支付宝配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
# 沙箱环境使用: https://openapi.alipaydev.com/gateway.do
ALIPAY_NOTIFY_URL=http://localhost:8080/api/payment/alipay/notify
ALIPAY_RETURN_URL=http://localhost:8080/payment/success

# PayPal配置
PAYPAL_MODE=sandbox
# 生产环境使用: live
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_RETURN_URL=http://localhost:8080/api/payment/paypal/return
PAYPAL_CANCEL_URL=http://localhost:8080/payment/cancelled

# 数据库配置（如果使用）
DATABASE_URL=./database.db